<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#000000"
	android:id="@+id/root"
    >

	<include layout="@layout/header"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/frontPic"
            android:src="@drawable/guesswhoacumen"
            android:layout_weight=".4"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingTop="10dip"
            android:paddingBottom="5dip"
            android:orientation="vertical"
            android:layout_weight=".4">
            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="180dip"
                android:minHeight="30dip"
                android:textSize="20dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:layout_marginBottom="5dip"
                android:text="@string/main_start_button"
                android:background="@drawable/menu_btn_drawable"
                />
            <Button
                android:id="@+id/btnScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="180dip"
                android:minHeight="30dip"
                android:textSize="20dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:layout_marginBottom="5dip"
                android:text="@string/main_scores_button"
                android:background="@drawable/menu_btn_drawable"
                />
            <Button
                android:id="@+id/btnOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="180dip"
                android:minHeight="30dip"
                android:textSize="20dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:layout_marginBottom="5dip"
                android:text="@string/main_options_button"
                android:background="@drawable/menu_btn_drawable"
                />
            <Button
                android:id="@+id/btnExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="180dip"
                android:minHeight="30dip"
                android:textSize="20dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:text="@string/main_exit_button"
                android:background="@drawable/menu_btn_drawable"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".5"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Saved for Future Carousel"/>
            </LinearLayout>
</LinearLayout>
